<table style="width: 100vw">
  <thead>
    <tr>
      <th style="border: 1px solid black; padding: 10px 20px;" class="text-center">code</th>
      <th style="border: 1px solid black; padding: 10px 20px;" class="text-center">question</th>
      <th style="border: 1px solid black; padding: 10px 20px;" class="text-center">answer</th>
      <th style="border: 1px solid black; padding: 10px 20px;" class="text-center">language</th>
      <th style="border: 1px solid black; padding: 10px 20px;" class="text-center">actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td style="border: 1px solid black; padding: 10px 20px;" class="text-center"><%= @question.code %></td>
      <td style="border: 1px solid black; padding: 10px 20px;" class="text-center"><%= @question.question %></td>
      <td style="border: 1px solid black; padding: 10px 20px;" class="text-center"><%= @question.answer %></td>
      <td style="border: 1px solid black; padding: 10px 20px;" class="text-center"><%= @question.language.code %></td>
      <td style="border: 1px solid black; padding: 10px 20px;" class="text-center">
        <span style="padding: 0 5px;" class="text-center"><%= link_to 'back', questions_path %></span>
        <span style="padding: 0 5px;" class="text-center"><%= link_to 'new', new_question_path %></span>
        <span style="padding: 0 5px;" class="text-center"><%= link_to 'edit', edit_question_path(@question) %></span>
        <span style="padding: 0 5px;" class="text-center"><%= link_to 'delete', question_path(@question), method: :delete %></span>
      </td>
    </tr>
  </tbody>
</table>
