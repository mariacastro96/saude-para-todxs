<div class="main-form-container">
  <div class="form-container">
    <%= simple_form_for(statement) do |f| %>
      <% if statement.errors.any? %>
        <div class="errors-container">
          <ul>
            <% statement.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.input :code, placeholder: 'Code', label_html: { class: 'icons pen-icon' }, label: '.' %>
      <%= f.input :title, placeholder: 'Title', label_html: { class: 'icons pen-icon' }, label: '.' %>
      <%= f.input :text, as: :text, placeholder: 'Text', label_html: { class: 'icons pen-icon' }, label: '.' %>
      <%= f.input :language_id, collection: languages, placeholder: 'Language', label_html: { class: 'icons' }, label: '.' %>
      <%= f.submit 'Add', class: 'form-button' %>
    <% end %>
    </div>
    <div class="arrow-back">
    <%= link_to statements_path do %>
      <i class="fas fa-arrow-left fa-2x" style="color: black; margin-top: 30px;"></i>
    <% end %>
  </div>
</div>
