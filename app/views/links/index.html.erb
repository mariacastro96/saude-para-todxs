<table style="width: 100vw">
  <thead>
    <tr>
      <th style="border: 1px solid black; padding: 10px 20px;" class="text-center">name</th>
      <th style="border: 1px solid black; padding: 10px 20px;" class="text-center">link</th>
      <th style="border: 1px solid black; padding: 10px 20px;" class="text-center">action</th>
    </tr>
  </thead>
  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td style="border: 1px solid black; padding: 10px 20px;" class="text-center"><%= link.name %></td>
        <td style="border: 1px solid black; padding: 10px 20px;" class="text-center"><%= link.link %></td>
        <td style="border: 1px solid black; padding: 10px 20px;" class="text-center">
          <span style="padding: 0 5px;" class="text-center"><%= link_to 'show', link_path(link) %></span>
          <span style="padding: 0 5px;" class="text-center"><%= link_to 'new', new_link_path(link) %></span>
          <span style="padding: 0 5px;" class="text-center"><%= link_to 'edit', edit_link_path(link) %></span>
          <span style="padding: 0 5px;" class="text-center"><%= link_to 'delete', link_path(link), method: :delete %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
