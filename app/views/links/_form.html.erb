<%= form_with model: link, local: true, role: 'form', class: 'form-horizontal' do |f| %>

  <%= render 'application/show_form_errors', f: f %>

  <div class="row">
    <div class="col-xs-12 table">

      <div class="form-group <%= 'has-error' if link.errors['name'].present? %>">
        <%= f.label :name, class: 'col-sm-2 control-label' do %>
          <%= t(:name) %> <span class="text-danger">*</span>
        <% end %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control', placeholder: 'name' %>
          <% if link.errors['name'].present? %>
            <span class="help-block text-danger">
              <small><%= link.errors['name'].first %></small>
            </span>
          <% end %>
        </div>
      </div>

      <div class="form-group <%= 'has-error' if link.errors['link'].present? %>">
        <%= f.label :link, class: 'col-sm-2 control-label' do %>
          <%= t(:link) %> <span class="text-danger">*</span>
        <% end %>
        <div class="col-sm-10">
          <%= f.text_field :link, class: 'form-control', placeholder: 'link' %>
          <% if link.errors['link'].present? %>
            <span class="help-block text-danger">
              <small><%= link.errors['link'].first %></small>
            </span>
          <% end %>
        </div>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-sm-offset-2 col-sm-10 m-t-15">
      <%= f.submit 'save', class: 'btn btn-white btn-sm waves-effect' %>
      <%= link_to t(:cancel), links_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
    </div>
  </div>
<% end %>
